{
  "name": "clipguard",
  "description": "A secure cross-app copy-paste tool",
  "private": true,
  "version": "1.0.0",
  "author": "Jack McNicol <jack@mcpickle.com.au>",
  "type": "module",
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "prepare": "husky",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "lint": "oxlint --type-aware --fix src/",
    "fmt:check": "oxfmt \"**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,css,astro}\" --check",
    "fmt": "oxfmt \"**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,css,astro}\" --write",
    "release": "commit-and-tag-version -a",
    "commit": "commit"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md,mdx,yml,yaml}": "oxfmt --write --no-error-on-unmatched-pattern",
    "src/**/*.{js,jsx,ts,tsx}": "oxlint -c .oxlintrc.json --type-aware --type-check --fix --quiet",
    "**/*.rs": "cargo fmt --all"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-autostart": "^2.5.1",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-opener": "^2.5.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@commitlint/prompt-cli": "^20.4.2",
    "@tauri-apps/cli": "^2.10.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "commit-and-tag-version": "^12.6.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "oxlint-tsgolint": "^0.15.0",
    "typescript": "~5.9.3",
    "vite": "^7.3.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        2,
        "always",
        "Infinity"
      ]
    }
  },
  "commit-and-tag-version": {
    "bumpFiles": [
      {
        "filename": "VERSION",
        "type": "plain-text"
      },
      {
        "filename": "package.json",
        "type": "json"
      }
    ]
  }
}
